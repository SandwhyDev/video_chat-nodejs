<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Togu</title>
    <head> </head>

    <link rel="stylesheet" href="home.css" />
  </head>

  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <script>
    const user = "<%= user %>";
    const allowed = "<%= allowed %>";
  </script>

  <body>
    <div class="container">
      <div class="profile">
        <h1 id="greeting"></h1>

        <a
          href="http://localhost:4000/oidc/session/end?id_token_hint=<%= token %>&post_logout_redirect_uri=<%= post_logout %>"
        >
          <img src="../log-out.png" class="keluar" alt="" width="40" height="40"
        /></a>
      </div>

      <div class="ruangan">
        <div class="ROOM">
          <div class="child_room">
            VIDEO CONFERENCE
            <div class="">
              <button onclick="BuatRoomVideoConference()">Buat Room</button>
            </div>
          </div>

          <div class="room_video_conference"></div>
        </div>

        <div class="ROOM">
          <div class="child_room">
            CHAT
            <div class="">
              <button onclick="BuatRoomChat()">Buat Room</button>
              <button onclick="JoinRoom()">Join Room</button>
            </div>
          </div>

          <div class="room_chat"></div>
        </div>

        <div class="ROOM">
          <div class="child_room">
            WALKIE TALKIE
            <div class="">
              <button onclick="BuatRoomWalkieTalkie()">Buat Room</button>
            </div>
          </div>

          <div class="room_walkie_talkie"></div>
        </div>
      </div>

      <!-- 
      <input type="text" id="myInput" /> -->

      <!-- Menambahkan overlay dan modal -->
      <div class="overlay" id="overlay"></div>
      <div class="modal" id="modal">
        <h3>minta izin bergabung</h3>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>

    <script src="home.js"></script>
  </body>
</html>
